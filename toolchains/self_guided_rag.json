{
	"name": "Self Guided RAG",
    "id": "self_guided_rag",
    "category": "RAG Tests",
    "first_event_follow_up": "make_conversation_title",
    "display_configuration": {
        "split": "none",
        "size": 100,
        "align": "center",
        "tailwind": "w-[85vw] md:w-[70vw] lg:w-[60vw] xl:w-[50vw] pb-8 pt-4",
        "mappings": [
            {
                "display_as": "basf-intro-screen",
                "hooks": [
                    {
                        "hook": "on_submit",
                        "target_event": "user_question_event",
                        "fire_index": 1,
                        "target_route": "question",
                        "store": false
                    },
                    {
                        "hook": "selected_collections",
                        "target_event": "user_question_event",
                        "fire_index": 1,
                        "target_route": "collection_ids",
                        "store": false
                    }
                ],
                "config": [
                    {
                        "name": "test_7_long_string",
                        "value": "Hello, how are you?"
                    }
                ],
                "tailwind": "w-[85vw] md:w-[70vw] lg:w-[60vw] xl:w-[50vw] pb-8 pt-4"
            },
            {
                "display_route": [
                    "chat_history"
                ],
                "display_as": "chat"
            }
        ],
        "footer": {
            "align": "justify",
            "tailwind": "pb-2",
            "mappings": [
                {
                    "type": "div",
                    "align": "center",
                    "tailwind": "min-w-[20px] min-h-[20px]",
                    "mappings": [
                        {
                            "display_as": "chat-input",
                            "hooks": [
                                {
                                    "hook": "on_submit",
                                    "target_event": "user_question_event",
                                    "fire_index": 1,
                                    "target_route": "question",
                                    "store": false
                                },
                                {
                                    "hook": "selected_collections",
                                    "target_event": "user_question_event",
                                    "fire_index": 1,
                                    "target_route": "collection_ids",
                                    "store": false
                                }
                            ],
                            "config": [
                                {
                                    "name": "test_7_long_string",
                                    "value": "6ix"
                                }
                            ],
                            "tailwind": "w-[85vw] md:w-[70vw] lg:w-[60vw] xl:w-[50vw]"
                        }
                    ]
                }
            ]
        }
    },
    "ui_spec_v2": {
        "version": 2,
        "root": "root",
        "meta": {
            "name": "self_guided_rag_basf_v2",
            "updatedAt": 0
        },
        "nodes": {
            "root": {
                "id": "root",
                "kind": "layout",
                "type": "stack",
                "direction": "vertical",
                "children": [
                    "container"
                ],
                "style": {
                    "height": "full",
                    "gap": "none",
                    "className": "h-full w-full"
                },
                "label": "Root"
            },
            "container": {
                "id": "container",
                "kind": "layout",
                "type": "box",
                "children": [
                    "contentScroll"
                ],
                "footer": "footer",
                "style": {
                    "height": "full",
                    "padding": "none",
                    "overflow": "hidden",
                    "className": "mx-auto w-[85vw] md:w-[70vw] lg:w-[60vw] xl:w-[50vw] pt-4 pb-8"
                },
                "label": "Centered Container"
            },
            "contentScroll": {
                "id": "contentScroll",
                "kind": "layout",
                "type": "scroll",
                "children": [
                    "contentStack"
                ],
                "style": {
                    "padding": "none",
                    "className": "min-h-0 flex-1"
                },
                "label": "Content Scroll"
            },
            "contentStack": {
                "id": "contentStack",
                "kind": "layout",
                "type": "stack",
                "direction": "vertical",
                "children": [
                    "intro",
                    "chat"
                ],
                "style": {
                    "gap": "md",
                    "padding": "none"
                },
                "label": "Content Stack"
            },
            "intro": {
                "id": "intro",
                "kind": "component",
                "componentId": "basf-intro-screen",
                "label": "BASF Intro",
                "config": {},
                "bindings": {
                    "chatHistory": {
                        "kind": "state",
                        "path": "/chat_history",
                        "fallback": []
                    }
                },
                "hooks": [
                    {
                        "hook": "submit",
                        "fires": [
                            {
                                "index": 1,
                                "actions": [
                                    {
                                        "type": "emitEvent",
                                        "nodeId": "user_question_event",
                                        "inputs": {
                                            "question": {
                                                "kind": "payload",
                                                "path": "/text"
                                            },
                                            "collection_ids": {
                                                "kind": "ui",
                                                "path": "/collections/selectedIds",
                                                "fallback": []
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            "chat": {
                "id": "chat",
                "kind": "component",
                "componentId": "chat",
                "label": "Chat Transcript",
                "config": {},
                "bindings": {
                    "messages": {
                        "kind": "state",
                        "path": "/chat_history",
                        "fallback": []
                    }
                }
            },
            "footer": {
                "id": "footer",
                "kind": "layout",
                "type": "box",
                "children": [
                    "chatInput"
                ],
                "style": {
                    "padding": "none",
                    "className": "pb-2"
                },
                "label": "Footer"
            },
            "chatInput": {
                "id": "chatInput",
                "kind": "component",
                "componentId": "chat-input",
                "label": "Chat Input",
                "config": {
                    "showCollections": true,
                    "showModelPicker": true
                },
                "hooks": [
                    {
                        "hook": "submit",
                        "fires": [
                            {
                                "index": 1,
                                "actions": [
                                    {
                                        "type": "emitEvent",
                                        "nodeId": "user_question_event",
                                        "inputs": {
                                            "question": {
                                                "kind": "payload",
                                                "path": "/text"
                                            },
                                            "collection_ids": {
                                                "kind": "ui",
                                                "path": "/collections/selectedIds",
                                                "fallback": []
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "hook": "openCollections",
                        "fires": [
                            {
                                "index": 1,
                                "actions": [
                                    {
                                        "type": "openModal",
                                        "modalId": "collectionPicker"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "hook": "openModel",
                        "fires": [
                            {
                                "index": 1,
                                "actions": [
                                    {
                                        "type": "openModal",
                                        "modalId": "modelPicker"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    },
    "initial_state": {
        "title": "New Chat",
        "chat_history": []
    },
    "nodes": [
        {
            "id": "user_question_event",
            "input_arguments": [
                {
                    "key": "model_parameters",
                    "from_user": true,
                    "optional": true
                },
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "question",
                    "from_user": true
                },
                {
                    "key": "collection_ids",
                    "from_user": true,
                    "optional": true
                },
                {
                    "key": "search_web",
                    "from_user": true,
                    "optional": true
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "appendAction", 
                            "initialValue": {
                                "type": "staticValue",
                                "value": {
                                    "role": "user"         
                                }
                            },
                            "insertion_values": [ null ],
                            "insertions": [ [ "content" ] ],
                            "route" : [ "chat_history" ]
                        }
                    ],
                    "getFromInputs": {
                        "route": [ "question" ]
                    }
                },
                {
                    "destination": "make_search_question",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "auth" ]
                        }
                    ],
                    "getFromInputs": { "route": [ "auth" ] }
                }
            ]
        },
        {
            "id": "make_search_question",
            "api_function": "llm_isolate_question",
            "input_arguments": [
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "chat_history",
                    "from_state": { "route": [ "chat_history" ] }
                },
                {
                    "key": "model",
                    "value": "qwen2.5-vl-3b-instruct"
                }
            ],
            "feed_mappings": [
                {
                    "destination": "simple_llm_call",
                    "condition": {
                        "operator": "==",
                        "variableOne": {
                            "type": "getNodeOutput",
                            "route": [ "output" ]
                        },
                        "variableTwo": {
                            "type": "staticValue",
                            "value": false
                        }
                    }
                },
                {
                    "destination": "self_guided_search_llm_call",
                    "condition": {
                        "operator": "!=",
                        "variableOne": {
                            "type": "getNodeOutput",
                            "route": [ "output" ]
                        },
                        "variableTwo": {
                            "type": "staticValue",
                            "value": false
                        }
                    },
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "question" ]
                        }
                    ],
                    "getFromOutputs": { "route": [ "output" ] }
                }
            ]
        },
        {
            "id": "search_hybrid",
            "api_function": "search_hybrid",
            "input_arguments": [
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "collection_ids",
                    "from_user": true
                },
                {
                    "key": "sources_in_object",
                    "value": true
                },
                {
                    "key": "group_chunks",
                    "value": false
                },
                {
                    "key": "query"
                }
            ],
            "feed_mappings": [
                {
                    "destination": "simple_llm_call",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "auth" ]
                        }
                    ],
                    "getFromInputs": { "route": [ "auth" ] }
                },
                {
                    "destination": "simple_llm_call",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "sources" ]
                        }
                    ],
                    "getFromOutputs": { "route": [ "sources" ] }
                }
            ]
        },
        {
            "id": "simple_llm_call",
            "api_function": "llm",
            "input_arguments": [
                {
                    "key": "chat_history",
                    "from_state": { "route": [ "chat_history" ] }
                },
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "sources",
                    "optional": true,
                    "default_value": []
                },
                {
                    "key": "model",
                    "value": "qwen2.5-vl-3b-instruct"
                },
                {
                    "key": "model_parameters",
                    "from_user": true,
                    "optional": true
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<USER>>",
                    "sequence": [
                        {
                            "type": "createAction", 
                            "route" : [ "output" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route" : [ "output" ]
                    }
                },
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "appendAction", 
                            "initialValue": {
                                "type": "staticValue",
                                "value": {
                                    "role": "assistant"           
                                }
                            },
                            "insertion_values": [ null, {"type": "getNodeInput", "route": ["sources"]} ],
                            "insertions": [ [ "content" ], [ "sources" ] ],
                            "route" : [ "chat_history" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route": [ "output" ]
                    },
                    "stream": true,
                    "stream_initial_value": ""
                }
            ]
        },
        {
            "id": "self_guided_search_llm_call",
            "api_function": "self_guided_search",
            "input_arguments": [
                {
                    "key": "question"
                },
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "collection_ids",
                    "from_user": true
                },
                {
                    "key": "model",
                    "value": "qwen2.5-vl-3b-instruct"
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "appendAction", 
                            "initialValue": {
                                "type": "staticValue",
                                "value": {
                                    "role": "assistant"           
                                }
                            },
                            "insertion_values": [ null ],
                            "insertions": [ [ "content" ] ],
                            "route" : [ "chat_history" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route": [ "output" ]
                    },
                    "stream": true,
                    "stream_initial_value": ""
                },
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "chat_history", -1, "sources" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route": [ "sources" ]
                    },
                    "stream": true,
                    "stream_initial_value": []
                },
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "chat_history", -1, "headline" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route": [ "searches" ]
                    },
                    "stream": true,
                    "stream_initial_value": []
                }
            ]
        },
        {
            "id": "make_conversation_title",
            "api_function": "llm_make_conversation_title",
            "input_arguments": [
                {
                    "key": "toolchain_function_caller",
                    "from_server": true
                },
                {
                    "key": "global_config",
                    "from_server": true
                },
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "chat_history",
                    "from_state": { "route": [ "chat_history" ] }
                },
                {
                    "key": "model",
                    "value": "qwen2.5-vl-3b-instruct"
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "title" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route": [ "output" ]
                    },
                    "stream": true,
                    "stream_initial_value": ""
                }
            ]
        }
    ]
}
