{
	"name": "Chat",
    "id": "chat_session_normal",
    "category": "General",
	"display_configuration": {
		"display_mappings": [
            {
                "route" : [ "chat_history" ],
                "display_as": "chat"
            }
        ],
        "max_files": 10,
        "enable_rag": true
	},
    "initial_state": {
        "title": "Chat",
        "chat_history": []
    },
    "nodes": [
        {
            "id": "user_question_event",
            "is_event": true,
            "input_arguments": [
                {
                    "key": "model_parameters",
                    "from_user": true
                },
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "collection_hash_ids",
                    "from_user": true,
                    "optional": true
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "appendAction", 
                            "value": {
                                "type": "staticValue",
                                "value": {
                                    "role": "user"           
                                }
                            },
                            "route" : [ "chat_history" ]
                        }
                    ],
                    "getFromInputs": {
                        "route": [
                            "model_parameters", 
                            "chat_history", 
                            -1,
                            "content"
                        ]
                    }
                },
                {
                    "destination": "third_step",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "model_parameters" ]
                        }
                    ],
                    "getFromInputs": { "route": [ "model_parameters" ] }
                },
                {
                    "destination": "third_step",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "auth" ]
                        }
                    ],
                    "getFromInputs": { "route": [ "auth" ] }
                }
            ]
        },
        {
            "id": "third_step",
            "api_function": "llm",
            "arguments": [
                {
                    "key": "auth"
                },
                {
                    "key": "model_parameters"
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<USER>>",
                    "getFromOutputs": {
                        "route" : [ "output" ]
                    },
                    "stream": true
                },
                {
                    "destination" : "<<STATE>>",
                    "getFromOutputs" : {
                        "route" : [ "output" ]
                    },
                    "sequence": [
                        {
                            "type": "createAction",
                            "initialValue" : {
                                "role": "assistant"
                            },
                            "route" : [ "content" ]
                        }
                    ]
                }
            ]
        }
    ]
}