{
	"name": "Streaming Chat Test",
    "id": "test_chat_session_normal_streaming",
    "category": "Test",
    "first_event_follow_up": "make_conversation_title",
    "display_configuration": {
        "split": "none",
        "size": 100,
        "align": "center",
        "tailwind": "w-[85vw] md:w-[70vw] lg:w-[60vw] xl:w-[50vw] pb-8 pt-4",
        "mappings": [
            {
                "display_route": [
                    "chat_history"
                ],
                "display_as": "chat"
            }
        ],
        "footer": {
            "align": "justify",
            "tailwind": "pb-2",
            "mappings": [
                {
                    "display_as": "chat_input",
                    "hooks": [
                        {
                            "hook": "on_submit",
                            "target_event": "user_question_event",
                            "target_route": "question",
                            "store": false
                        }
                    ],
                    "config": [],
                    "tailwind": "w-[85vw] md:w-[70vw] lg:w-[60vw] xl:w-[50vw]"
                }
            ]
        }
    },
    "initial_state": {
        "title": "New Chat",
        "chat_history": []
    },
    "nodes": [
        {
            "id": "user_question_event",
            "input_arguments": [
                {
                    "key": "model_parameters",
                    "from_user": true,
                    "optional": true
                },
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "question",
                    "from_user": true
                },
                {
                    "key": "collection_hash_ids",
                    "from_user": true,
                    "optional": true
                },
                {
                    "key": "search_web",
                    "from_user": true,
                    "optional": true
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "appendAction", 
                            "initialValue": {
                                "type": "staticValue",
                                "value": {
                                    "role": "user"         
                                }
                            },
                            "insertion_values": [ null ],
                            "insertions": [ [ "content" ] ],
                            "route" : [ "chat_history" ]
                        }
                    ],
                    "getFromInputs": {
                        "route": [ "question" ]
                    }
                },
                {
                    "destination": "third_step",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "model_parameters" ]
                        }
                    ],
                    "getFromInputs": { "route": [ "model_parameters" ] }
                },
                {
                    "destination": "third_step",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "auth" ]
                        }
                    ],
                    "getFromInputs": { "route": [ "auth" ] }
                }
            ]
        },
        {
            "id": "third_step",
            "api_function": "llm",
            "input_arguments": [
                {
                    "key": "chat_history",
                    "from_state": { "route": [ "chat_history" ] }
                },
                {
                    "key": "auth"
                },
                {
                    "key": "model_parameters",
                    "optional": true
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<USER>>",
                    "sequence": [
                        {
                            "type": "createAction", 
                            "route" : [ "output" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route" : [ "output" ]
                    }
                },
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "appendAction", 
                            "initialValue": {
                                "type": "staticValue",
                                "value": {
                                    "role": "assistant"           
                                }
                            },
                            "insertion_values": [ null ],
                            "insertions": [ [ "content" ] ],
                            "route" : [ "chat_history" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route": [ "output" ]
                    },
                    "stream": true,
                    "stream_initial_value": ""
                }
            ]
        },
        {
            "id": "make_conversation_title",
            "api_function": "llm_make_conversation_title",
            "input_arguments": [
                {
                    "key": "toolchain_function_caller",
                    "from_server": true
                },
                {
                    "key": "global_config",
                    "from_server": true
                },
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "chat_history",
                    "from_state": { "route": [ "chat_history" ] }
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "title" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route": [ "output" ]
                    },
                    "stream": true,
                    "stream_initial_value": ""
                }
            ]
        }
    ]
}