{
	"name": "Chat With Streaming",
    "id": "chat_session_normal_streaming",
    "category": "General",
	"display_configuration": {
		"display_mappings": [
            {
                "route" : [ "chat_history" ],
                "display_as": "chat"
            }
        ],
        "max_files": 10,
        "enable_rag": true
	},
    "initial_state": {
        "title": "Chat",
        "chat_history": []
    },
    "nodes": [
        {
            "id": "user_question_event",
            "is_event": true,
            "input_arguments": [
                {
                    "key": "model_parameters",
                    "from_user": true,
                    "optional": true
                },
                {
                    "key": "auth",
                    "from_user": true
                },
                {
                    "key": "question",
                    "from_user": true
                },
                {
                    "key": "collection_hash_ids",
                    "from_user": true,
                    "optional": true
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "appendAction", 
                            "initialValue": {
                                "type": "staticValue",
                                "value": {
                                    "role": "user"           
                                }
                            },
                            "insertion_values": [ null ],
                            "insertions": [ [ "content" ] ],
                            "route" : [ "chat_history" ]
                        }
                    ],
                    "getFromInputs": {
                        "route": [ "question" ]
                    }
                },
                {
                    "destination": "third_step",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "model_parameters" ]
                        }
                    ],
                    "getFromInputs": { "route": [ "model_parameters" ] }
                },
                {
                    "destination": "third_step",
                    "sequence": [
                        {
                            "type": "createAction",
                            "route" : [ "auth" ]
                        }
                    ],
                    "getFromInputs": { "route": [ "auth" ] }
                }
            ]
        },
        {
            "id": "third_step",
            "api_function": "llm",
            "input_arguments": [
                {
                    "key": "chat_history",
                    "from_state": { "route": [ "chat_history" ] }
                },
                {
                    "key": "auth"
                },
                {
                    "key": "model_parameters",
                    "optional": true
                }
            ],
            "feed_mappings": [
                {
                    "destination": "<<USER>>",
                    "sequence": [
                        {
                            "type": "createAction", 
                            "route" : [ "output" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route" : [ "output" ]
                    }
                },
                {
                    "destination": "<<STATE>>",
                    "sequence": [
                        {
                            "type": "appendAction", 
                            "initialValue": {
                                "type": "staticValue",
                                "value": {
                                    "role": "assistant"           
                                }
                            },
                            "insertion_values": [ null ],
                            "insertions": [ [ "content" ] ],
                            "route" : [ "chat_history" ]
                        }
                    ],
                    "getFromOutputs": {
                        "route": [ "output" ]
                    },
                    "stream": true,
                    "stream_initial_value": ""
                }
            ]
        }
    ]
}